#!/bin/bash
set -euo pipefail
image=thavlik/foldy
tag=latest
docker build -t $image:$tag .
docker run \
    -v C:/Users/tlhavlik/.aws:/root/.aws \
    -it \
    --name foldy \
    --rm \
    $image:$tag \
    python3 ./simulate.py \
        --no_report \
        --pdb_id 4jrn \
        --model_id 1 \
        --chain_id A \
        --correlation_id 0 \
        --primary  \
        --mask '----++++++++++++++++++++++++-------++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++--+++++++++++----++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++------' \
        --nsteps 10
        